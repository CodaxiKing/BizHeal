modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BizHeal App"

[[workflows.workflow]]
name = "BizHeal App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/app && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41843
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/app && pnpm start"]
build = ["bash", "-c", "cd apps/app && pnpm build"]
