modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = ["pnpm"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BizHeal SaaS App"

[[workflows.workflow]]
name = "BizHeal SaaS App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/app && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38735
externalPort = 3001

[[ports]]
localPort = 40621
externalPort = 3000

[[ports]]
localPort = 46113
externalPort = 3002

[[ports]]
localPort = 46291
externalPort = 3003

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/app && pnpm start"]
build = ["bash", "-c", "cd apps/app && pnpm build"]
