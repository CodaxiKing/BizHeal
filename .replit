modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BizHeal App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BizHeal Marketing"

[[workflows.workflow]]
name = "BizHeal App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/app && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "BizHeal Marketing"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && pnpm dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm", "--filter", "@bizheal/app", "start"]
build = ["pnpm", "install"]
